{
  "name": "minibot-engine",
  "private": true,
  "version": "0.1.0",
  "description": "a test",
  "repository": "https://github.com/todo",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "bower": "^1.7.7",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.8",
    "karma-junit-reporter": "^0.4.1",
    "protractor": "^3.2.2",
    "uglify-js": "^2.7.3"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server -a localhost -p 8000 -c-1 ./examples",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js",
    "build-js": "browserify -r ./src/minibot.js:minibot -t babelify --outfile ./dist/minibot.js",
    "watch-js": "watchify -v -r ./src/minibot.js:minibot -t babelify --outfile ./dist/minibot.js",
    "minify-js": "uglifyjs dist/minibot.js -o dist/minibot.min.js",
    "preexamples-js": "npm run build-js",
    "examples-js": "browserify -x minibot ./examples/src/main.js -t babelify --outfile ./examples/js/examples.js"
  }
}
